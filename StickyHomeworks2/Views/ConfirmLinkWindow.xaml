<Window x:Class="StickyHomeworks2.Views.ConfirmLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyHomeworks2.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ely="http://github.com/HelloWRC/ElysiaFramework"
        mc:Ignorable="d"
        FontFamily="{StaticResource HarmonyOsSans}"
        Title="打开外部链接？"
        Width="520"
        Height="220"
        MinWidth="500"
        MinHeight="300"
        Background="#303030"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <!-- 外部留白 -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 提示文本 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <TextBlock Text="确定打开链接?" FontSize="16" Foreground="White"/>
            </StackPanel>

            <!-- 链接显示区域 -->
            <Border Background="#424242"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,15"
                    BorderBrush="#666666"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              MaxHeight="100">
                    <StackPanel>
                        <TextBlock x:Name="LinkUriTextBlock"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Foreground="White"
                                   TextAlignment="Left"/>
                        <TextBlock x:Name="LinkTextTextBlock"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="LightGray"
                                   TextAlignment="Left"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 按钮区域 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        Margin="0 0 12 0"
                        Click="YesButton_Click">
                    <ely:IconText Kind="Check" Text="确定" IconMargin="3 0 0 0" RenderTransformOrigin="0.632,1.665" Foreground="Green"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        Click="NoButton_Click">
                    <ely:IconText Kind="Close" Text="取消" IconMargin="3 0 0 0" RenderTransformOrigin="0.632,1.665" Foreground="Red"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>